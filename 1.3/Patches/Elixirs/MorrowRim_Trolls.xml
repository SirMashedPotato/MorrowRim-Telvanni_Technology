<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>MorrowRim - Trolls</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/ThingDef[@Name="MorrowRim_TrollElixirBase"]</xpath>
					<value>
						<thingCategories Inherit="False">
							<li>MorrowRim_Elixir</li>
						</thingCategories>
					</value>
				</li>
	
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/RecipeDef[@Name="MorrowRim_CraftElixirBase_Primitive"]/recipeUsers[not(thingCategories)]</xpath>
					<value>
						<li>MorrowRim_ElixirTable</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
	
</Patch>

