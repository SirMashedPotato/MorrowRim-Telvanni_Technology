	<!-- basic -->
	
	<ThingDef ParentName="Telvanni_BaseStave_Aetherial">
		<defName>Telvanni_StaveAetherialBasic</defName>
		<label>basic aetherial energy stave</label>
		<description>An aetherial energy stave of Telvanni design, its focus releases blasts of aetherial energy. This particular stave is capable of firing infrequent blasts over a reasonable distance, with fairly high accuracy, making it perfect for beginners.</description>
		<graphicData>
		  <texPath>Things/Item/Equipment/WeaponStave/Stave_Basic</texPath>
		  <color>(156,225,232)</color>
		</graphicData>
		<statBases>
		  <AccuracyTouch>0.65</AccuracyTouch>
		  <AccuracyShort>0.80</AccuracyShort>
		  <AccuracyMedium>0.90</AccuracyMedium>
		  <AccuracyLong>0.80</AccuracyLong>
		  <RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown> <!-- - 0.5 -->
		</statBases>
		<verbs>
		  <li>
			<verbClass>Verb_Shoot</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Telvanni_ProjectileAetherialBasic</defaultProjectile>
			<warmupTime>1.7</warmupTime>
			<range>36.9</range>
			<soundCast>MorrowRim_Fire_AetherialStave</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
			<burstShotCount>2</burstShotCount>
			<ticksBetweenBurstShots>1</ticksBetweenBurstShots>
		  </li>
		</verbs>
	</ThingDef>
	<ThingDef ParentName="Telvanni_BaseProjectile">
		<defName>Telvanni_ProjectileAetherialBasic</defName>
		<projectile>
		  <damageDef>Bullet</damageDef>
		  <damageAmountBase>18</damageAmountBase>
		  <stoppingPower>1.5</stoppingPower>
		  <armorPenetrationBase>0.2</armorPenetrationBase>
		  <speed>70</speed>
		</projectile>
		<graphicData>
		  <texPath>Things/Projectile/StaveShot_small</texPath>
		  <color>(156,225,232)</color>
		</graphicData>
	</ThingDef>
	
