	<!-- Res hediff -->
	
	<HediffDef ParentName="MorrowRim_ElixirHighActiveBase">
		<defName>MorrowRim_TelvanniResurrects</defName>
		<label>necromantic resurrection</label>
		<description>Resurrection through a Telvanni designed necromantic elixir. While it will provide a small bonus, based on the type of elixir used, it will also prevent subsequent resurrection from all necromantic elixirs.</description>
		<stages>
			<li>
				<label>grave</label>
				<minSeverity>0.1</minSeverity>
				<statOffsets>
					<ToxicSensitivity>-0.25</ToxicSensitivity>
					<PsychicSensitivity>-0.15</PsychicSensitivity>
				</statOffsets>
				<painFactor>-0.10</painFactor>
			</li>
			<li>
				<label>spectral</label>
				<minSeverity>0.2</minSeverity>
				<statOffsets>
					<IncomingDamageFactor>-0.05</IncomingDamageFactor>
					<MeleeDodgeChance>0.15</MeleeDodgeChance>
				</statOffsets>
				<painFactor>-0.10</painFactor>
			</li>
			<li>
				<label>vampiric</label>
				<minSeverity>0.3</minSeverity>
				<statOffsets>
					<ArmorRating_Heat>-0.10</ArmorRating_Heat>
					<ComfyTemperatureMax>8</ComfyTemperatureMax>
					<ComfyTemperatureMin>-8</ComfyTemperatureMin>
				</statOffsets>
				<painFactor>-0.10</painFactor>
			</li>
		</stages>
	</HediffDef>
	
	

