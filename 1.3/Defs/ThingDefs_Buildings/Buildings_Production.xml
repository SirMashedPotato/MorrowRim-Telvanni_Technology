	<!-- Forge -->
	
	<ThingDef ParentName="TelvanniBenchBase">
		<defName>MorrowRim_TelvanniForge</defName>
		<label>telvanni forge</label>
		<description>A Telvanni forge equipped for creating various items. It is powered by a heart stone, and periodically needs to be refuelled with any kind of elemental salt, other than aetherial.</description>
		<graphicData>
			  <texPath>Things/Building/Production/MorrowRim_TableTelvanniForge</texPath>
		</graphicData>
		<costStuffCount>75</costStuffCount>
		<stuffCategories Inherit="False">
		  <li>Stony</li>
		</stuffCategories>
		<costList>
			<MorrowRim_HeartStone>1</MorrowRim_HeartStone>
			<Steel>25</Steel>
		</costList>
		<researchPrerequisites>
			<li>MorrowRim_TelvanniForge</li>
		</researchPrerequisites>
		<recipes>

		</recipes>
		<comps>
		  <li Class="CompProperties_Refuelable">
			<fuelConsumptionRate>10.0</fuelConsumptionRate>
			<fuelCapacity>25.0</fuelCapacity>
			<fuelFilter>
			  <thingDefs>
				<li>MorrowRim_FireSalts</li>
				<li>MorrowRim_FrostSalts</li>
				<li>MorrowRim_VoidSalts</li>
				<li>MorrowRim_AirSalts</li>
				<li>MorrowRim_WaterSalts</li>
				<li>MorrowRim_FerrousSalts</li>
				<li>Dagoth_AshSalts</li>
			  </thingDefs>
			</fuelFilter>
			<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
			<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
		  </li>
		  <li Class="CompProperties_AffectedByFacilities">
			<linkableFacilities>
			  <li>MorrowRim_AlchemyBench</li>
			</linkableFacilities>
		  </li>
		</comps>
	</ThingDef>

	<!-- energy staff -->
	
