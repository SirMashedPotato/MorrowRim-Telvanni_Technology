    <graphicData>
      <texPath>Things/Building/Production/MorrowRim_TableEnergyStaff</texPath>
    </graphicData>
    <costList>
      <MorrowRim_HeartStone>1</MorrowRim_HeartStone>
    </costList>
    <costStuffCount>75</costStuffCount>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>MorrowRim_TelvanniTonalResonator</li>
        </linkableFacilities>
      </li>
    </comps>
	<researchPrerequisites>
		<li>MorrowRim_StaffTable</li>
	</researchPrerequisites>
  </ThingDef>
  
