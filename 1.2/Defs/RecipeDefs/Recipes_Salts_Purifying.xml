	<RecipeDef Name="MorrowRim_PurifySaltsBase" Abstract="True">
		<jobString>Purifying salts.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>500</workAmount>
		<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
		<recipeUsers>
			<li>MorrowRim_TelvanniForge</li>
		</recipeUsers>
		<workSkill>Crafting</workSkill>
		<researchPrerequisite>MorrowRim_TelvanniSaltPurifying</researchPrerequisite>
		<skillRequirements>
		  <Intellectual>8</Intellectual>
		</skillRequirements>
	</RecipeDef>
	
	<!-- Standard -->
	
	<RecipeDef ParentName = "MorrowRim_PurifySaltsBase">
		<defName>MorrowRim_PurifyAirSalts</defName>
		<label>purify air salts</label>
		<description>Purify 10 air salts from 5 air salts and 3 aetherial salts.</description>
		<jobString>Purifying air salts.</jobString>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>MorrowRim_AirSalts</li>
			  </thingDefs>
			</filter>
			<count>5</count>
		  </li>
		  <li>
			<filter>
			  <thingDefs>
				<li>MorrowRim_AetherialSalts</li>
			  </thingDefs>
			</filter>
			<count>3</count>
		  </li>
		</ingredients>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>MorrowRim_AirSalts</li>
			<li>MorrowRim_AetherialSalts</li>
		  </thingDefs>
		</fixedIngredientFilter>
		<products>
		  <MorrowRim_AirSalts>10</MorrowRim_AirSalts>
		</products>
	</RecipeDef>
	
