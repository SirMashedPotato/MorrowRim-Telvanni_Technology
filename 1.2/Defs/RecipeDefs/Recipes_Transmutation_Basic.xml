<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Base -->
	
	<RecipeDef Name="MorrowRim_TransmutationBase" Abstract="True">
		<jobString>Transmuting resources.</jobString>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>1000</workAmount>
		<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
		<recipeUsers>
			<li>MorrowRim_TelvanniForge</li>
		</recipeUsers>
		<workSkill>Intellectual</workSkill>
		<researchPrerequisite>MorrowRim_TelvanniTransmuationBasic</researchPrerequisite>
		<skillRequirements>
		  <Intellectual>12</Intellectual>
		</skillRequirements>
	</RecipeDef>
	
	<!-- Standard -->
	
	<RecipeDef ParentName = "MorrowRim_TransmutationBase">
		<defName>MorrowRim_TransmutationSteel</defName>
		<label>transmutate steel</label>
		<description>Transmutate 30 steel using 15 ferrous salts and 30 stone blocks.</description>
		<jobString>Transmutating steel.</jobString>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>MorrowRim_FerrousSalts</li>
			  </thingDefs>
			</filter>
			<count>15</count>
		  </li>
		  <li>
			<filter>
			  <categories>
				<li>StoneBlocks</li>
			  </categories>
			</filter>
			<count>30</count>
		  </li>
		</ingredients>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>MorrowRim_FerrousSalts</li>
		  </thingDefs>
		  <categories>
			<li>StoneBlocks</li>
		  </categories>
		</fixedIngredientFilter>
		<products>
		  <Steel>30</Steel>
		</products>
	</RecipeDef>
	
	<RecipeDef ParentName = "MorrowRim_TransmutationBase">
		<defName>MorrowRim_TransmutationSilver</defName>
		<label>transmutate silver</label>
		<description>Transmutate 50 silver using 15 air salts, 15 water salts and 30 steel.</description>
		<jobString>Transmutating steel.</jobString>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>MorrowRim_AirSalts</li>
			  </thingDefs>
			</filter>
			<count>15</count>
		  </li>
		  <li>
			<filter>
			  <thingDefs>
				<li>MorrowRim_WaterSalts</li>
			  </thingDefs>
			</filter>
			<count>15</count>
		  </li>
		  <li>
			<filter>
			  <thingDefs>
				<li>Steel</li>
			  </thingDefs>
			</filter>
			<count>30</count>
		  </li>
		</ingredients>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>MorrowRim_AirSalts</li>
			<li>MorrowRim_WaterSalts</li>
			<li>Steel</li>
		  </thingDefs>
		</fixedIngredientFilter>
		<products>
		  <Silver>50</Silver>
		</products>
	</RecipeDef>
	
	<RecipeDef ParentName = "MorrowRim_TransmutationBase">
		<defName>MorrowRim_TransmutationGold</defName>
		<label>transmutate gold</label>
		<description>Transmutate 75 gold using 15 aetherial salts, 15 ash salts and 50 silver.</description>
		<jobString>Transmutating steel.</jobString>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>MorrowRim_AetherialSalts</li>
			  </thingDefs>
			</filter>
			<count>15</count>
		  </li>
		  <li>
			<filter>
			  <thingDefs>
				<li>Dagoth_AshSalts</li>
			  </thingDefs>
			</filter>
			<count>15</count>
		  </li>
		  <li>
			<filter>
			  <thingDefs>
				<li>Silver</li>
			  </thingDefs>
			</filter>
			<count>5</count>
		  </li>
		</ingredients>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>MorrowRim_AetherialSalts</li>
			<li>Dagoth_AshSalts</li>
			<li>Silver</li>
		  </thingDefs>
		</fixedIngredientFilter>
		<products>
		  <Gold>75</Gold>
		</products>
	</RecipeDef>

</Defs>
