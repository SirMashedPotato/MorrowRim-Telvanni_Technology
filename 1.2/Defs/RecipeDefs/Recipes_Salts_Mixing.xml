<Defs>

	<!-- Base -->
	
	<RecipeDef Name="MorrowRim_CreateSaltsBase" Abstract="True">
		<jobString>Creating salts.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>500</workAmount>
		<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
		<recipeUsers>
			<li>MorrowRim_TelvanniForge</li>
		</recipeUsers>
		<workSkill>Crafting</workSkill>
		<researchPrerequisite>MorrowRim_TelvanniSaltMixing</researchPrerequisite>
		<skillRequirements>
		  <Intellectual>4</Intellectual>
		</skillRequirements>
	</RecipeDef>
	
	<!-- Standard -->
	
	<RecipeDef ParentName = "MorrowRim_CreateSaltsBase">
		<defName>MorrowRim_CreateAirSalts</defName>
		<label>create air salts</label>
		<description>Create 5 air salts from 5 water salts and 5 void salts.</description>
		<jobString>Creating air salts.</jobString>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>MorrowRim_WaterSalts</li>
			  </thingDefs>
			</filter>
			<count>5</count>
		  </li>
		  <li>
			<filter>
			  <thingDefs>
				<li>MorrowRim_VoidSalts</li>
			  </thingDefs>
			</filter>
			<count>5</count>
		  </li>
		</ingredients>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>MorrowRim_WaterSalts</li>
			<li>MorrowRim_VoidSalts</li>
		  </thingDefs>
		</fixedIngredientFilter>
		<products>
		  <MorrowRim_AirSalts>5</MorrowRim_AirSalts>
		</products>
	</RecipeDef>
	
