<Defs>

	<!-- Base Fire -->
	
	<ThingDef Name="Telvanni_BaseStave_Fire" ParentName="Telvanni_BaseStave" Abstract="True">
		<recipeMaker>
			<researchPrerequisite>MorrowRim_StaffFire</researchPrerequisite>
		</recipeMaker>
		<costList>
		  <MorrowRim_HeartStone>1</MorrowRim_HeartStone>
		  <MorrowRim_FireSalts>25</MorrowRim_FireSalts>
		</costList>
	</ThingDef>
	
	<!-- basic -->
	
	<ThingDef ParentName="Telvanni_BaseStave_Fire">
		<defName>Telvanni_StaveFireBasic</defName>
		<label>basic fire stave</label>
		<description>An energy stave of Telvanni design, its focus releases blasts of fire. This particular stave is capable of firing infrequent blasts over a reasonable distance, with fairly high accuracy, making it perfect for beginners.</description>
		<graphicData>
		  <texPath>Things/Item/Equipment/WeaponStave/Stave_Basic</texPath>
		  <color>(238,139,96)</color>
		</graphicData>
		<statBases>
		  <AccuracyTouch>0.65</AccuracyTouch>
		  <AccuracyShort>0.80</AccuracyShort>
		  <AccuracyMedium>0.90</AccuracyMedium>
		  <AccuracyLong>0.80</AccuracyLong>
		  <RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown> <!-- - 0.5 -->
		</statBases>
		<verbs>
		  <li>
			<verbClass>Verb_Shoot</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Telvanni_ProjectileFireBasic</defaultProjectile>
			<warmupTime>1.7</warmupTime>
			<range>36.9</range>
			<soundCast>MorrowRim_Fire_TelvanniStave</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
		  </li>
		</verbs>
	</ThingDef>
	<ThingDef ParentName="Telvanni_BaseProjectile">
		<defName>Telvanni_ProjectileFireBasic</defName>
		<projectile>
		  <damageDef>Telvanni_StaveBurn</damageDef>
		  <damageAmountBase>18</damageAmountBase>
		  <stoppingPower>1.5</stoppingPower>
		  <speed>70</speed>
		</projectile>
		<graphicData>
		  <texPath>Things/Projectile/StaveShot_small</texPath>
		  <color>(238,139,96)</color>
		</graphicData>
	</ThingDef>
	
