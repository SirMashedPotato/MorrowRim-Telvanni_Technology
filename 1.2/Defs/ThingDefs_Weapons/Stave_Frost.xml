<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Base Frost -->
	
	<ThingDef Name="Telvanni_BaseStave_Frost" ParentName="Telvanni_BaseStave" Abstract="True">
		<recipeMaker>
			<researchPrerequisite>MorrowRim_StaffFrost</researchPrerequisite>
		</recipeMaker>
		<costList>
		  <MorrowRim_HeartStone>1</MorrowRim_HeartStone>
		  <MorrowRim_FrostSalts>25</MorrowRim_FrostSalts>
		</costList>
	</ThingDef>
	
	<!-- basic -->
	
	<ThingDef ParentName="Telvanni_BaseStave_Frost">
		<defName>Telvanni_StaveFrostBasic</defName>
		<label>basic frost stave</label>
		<description>An energy stave of Telvanni design, its focus releases blasts of frost. This particular stave is capable of firing infrequent blasts over a reasonable distance, with fairly high accuracy, making it perfect for beginners.</description>
		<graphicData>
		  <texPath>Things/Item/Equipment/WeaponStave/Stave_Basic</texPath>
		  <color>(222,239,253)</color>
		</graphicData>
		<statBases>
		  <AccuracyTouch>0.65</AccuracyTouch>
		  <AccuracyShort>0.80</AccuracyShort>
		  <AccuracyMedium>0.90</AccuracyMedium>
		  <AccuracyLong>0.80</AccuracyLong>
		  <RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown> <!-- - 0.5 -->
		</statBases>
		<verbs>
		  <li>
			<verbClass>Verb_Shoot</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Telvanni_ProjectileFrostBasic</defaultProjectile>
			<warmupTime>1.7</warmupTime>
			<range>36.9</range>
			<soundCast>MorrowRim_Fire_TelvanniStave</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
		  </li>
		</verbs>
	</ThingDef>
	<ThingDef ParentName="Telvanni_BaseProjectile">
		<defName>Telvanni_ProjectileFrostBasic</defName>
		<projectile>
		  <damageDef>Telvanni_StaveFrostbite</damageDef>
		  <damageAmountBase>18</damageAmountBase>
		  <stoppingPower>1.5</stoppingPower>
		  <speed>70</speed>
		</projectile>
		<graphicData>
		  <texPath>Things/Projectile/StaveShot_small</texPath>
		  <color>(222,239,253)</color>
		</graphicData>
	</ThingDef>
	
	<!-- Blast -->
	
	<ThingDef ParentName="Telvanni_BaseStave_Frost">
		<defName>Telvanni_StaveFrostBlast</defName>
		<label>blast frost stave</label>
		<description>An energy stave of Telvanni design, its focus releases blasts of frost. This particular stave fires a single blast from each of its five focuses. Each blast is short lived, but packs a punch.</description>
		<graphicData>
		  <texPath>Things/Item/Equipment/WeaponStave/Stave_Blast</texPath>
		  <color>(222,239,253)</color>
		</graphicData>
		<statBases>
		  <AccuracyTouch>0.80</AccuracyTouch>
		  <AccuracyShort>0.87</AccuracyShort>
		  <AccuracyMedium>0.77</AccuracyMedium>
		  <AccuracyLong>0.64</AccuracyLong>
		  <RangedWeapon_Cooldown>1.25</RangedWeapon_Cooldown>
		</statBases>
		<verbs>
		  <li>
			<verbClass>Verb_Shoot</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Telvanni_ProjectileFrostBlast</defaultProjectile>
			<warmupTime>0.9</warmupTime>
			<range>15.9</range>
			<soundCast>MorrowRim_Fire_TelvanniStave</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
			<burstShotCount>5</burstShotCount>
			<ticksBetweenBurstShots>1</ticksBetweenBurstShots>
		  </li>
		</verbs>
	</ThingDef>
	<ThingDef ParentName="Telvanni_BaseProjectile">
		<defName>Telvanni_ProjectileFrostBlast</defName>
		<projectile>
		  <damageDef>Telvanni_StaveFrostbite</damageDef>
		  <damageAmountBase>10</damageAmountBase>
		  <stoppingPower>3</stoppingPower>
		  <armorPenetrationBase>0.14</armorPenetrationBase>
		  <speed>90</speed>
		</projectile>
		<graphicData>
		  <texPath>Things/Projectile/StaveShot_Tiny</texPath>
		  <color>(222,239,253)</color>
		</graphicData>
	</ThingDef>
	
	<!-- Charged -->
	
	<ThingDef ParentName="Telvanni_BaseStave_Frost">
		<defName>Telvanni_StaveFrostCharged</defName>
		<label>charged frost stave</label>
		<description>An energy stave of Telvanni design, its focus releases blasts of frost. This particular stave creates a supercharged blast between its two focuses, causing it to hit the target with great force and speed.</description>
		<graphicData>
		  <texPath>Things/Item/Equipment/WeaponStave/Stave_Charged</texPath>
		  <color>(222,239,253)</color>
		</graphicData>
		<statBases>
		  <AccuracyTouch>0.65</AccuracyTouch>
		  <AccuracyShort>0.85</AccuracyShort>
		  <AccuracyMedium>0.85</AccuracyMedium>
		  <AccuracyLong>0.75</AccuracyLong>
		  <RangedWeapon_Cooldown>2.7</RangedWeapon_Cooldown>
		</statBases>
		<verbs>
		  <li>
			<verbClass>Verb_Shoot</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Telvanni_ProjectileFrostCharged</defaultProjectile>
			<warmupTime>4.1</warmupTime>
			<range>29.9</range>
			<soundCast>MorrowRim_Fire_TelvanniStave</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
		  </li>
		</verbs>
	</ThingDef>
	<ThingDef ParentName="Telvanni_BaseProjectile">
		<defName>Telvanni_ProjectileFrostCharged</defName>
		<projectile>
		  <damageDef>Telvanni_StaveFrostbite</damageDef>
		  <damageAmountBase>28.8</damageAmountBase>
		  <stoppingPower>2.0</stoppingPower>
		  <armorPenetrationBase>0.5</armorPenetrationBase>
		  <speed>180</speed>
		</projectile>
		<graphicData>
		  <texPath>Things/Projectile/StaveShot_Charged</texPath>
		  <color>(222,239,253)</color>
		</graphicData>
	</ThingDef>
	
	<!-- Cloud -->

	<ThingDef ParentName="Telvanni_BaseStave_Frost">
		<defName>Telvanni_StaveFrostCloud</defName>
		<label>cloud frost stave</label>
		<description>An energy stave of Telvanni design, its focus releases blasts of frost. This particular stave fires a single slow moving blast, that releases a cloud of freezing air upon reaching its target.</description>
		<tickerType>Normal</tickerType>
		<graphicData>
		  <texPath>Things/Item/Equipment/WeaponStave/Stave_Cloud</texPath>
		  <color>(222,239,253)</color>
		</graphicData>
		<statBases>
		  <RangedWeapon_Cooldown>2.6</RangedWeapon_Cooldown>
		</statBases>
		<verbs>
		  <li>
			<verbClass>Verb_Shoot</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Telvanni_ProjectileFrostCloud</defaultProjectile>
			<forcedMissRadius>1.9</forcedMissRadius>
			<warmupTime>1.8</warmupTime>
			<range>15.9</range>
			<soundCast>MorrowRim_Fire_TelvanniStave</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
			<targetParams>
			  <canTargetLocations>true</canTargetLocations>
			</targetParams>
			<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
			<noiseRadius>4</noiseRadius>
		  </li>
		</verbs>
	</ThingDef>
	<ThingDef ParentName="Telvanni_BaseProjectile">
		<defName>Telvanni_ProjectileFrostCloud</defName>
		<thingClass>Projectile_Explosive</thingClass>
		<projectile>
		  <explosionRadius>1.9</explosionRadius>
		  <damageDef>Burn</damageDef>
		  <explosionDelay>0</explosionDelay>
		  <damageAmountBase>0</damageAmountBase>
		  <postExplosionSpawnThingDef>Telvanni_Gas_StaveFrost</postExplosionSpawnThingDef>
		  <postExplosionSpawnChance>1</postExplosionSpawnChance>
		</projectile>
		<graphicData>
		  <texPath>Things/Projectile/StaveShot_Explosive</texPath>
		  <color>(222,239,253)</color>
		</graphicData>
	</ThingDef>
	
