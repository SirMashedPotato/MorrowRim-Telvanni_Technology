<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
	<HediffDef>
		<defName>MorrowRim_ArmorCorrosion</defName>
		<label>armor corrosion</label>
		<description>Caustic substances covering armour. Decreases armor values until it passes, and is not lethal.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(1.0, 0.7, 0.7)</defaultLabelColor>
		<maxSeverity>1</maxSeverity>
		<makesSickThought>false</makesSickThought>
		<scenarioCanAdd>true</scenarioCanAdd>
		<comps>
		  <li Class="HediffCompProperties_Immunizable">
			<severityPerDayNotImmune>-0.08</severityPerDayNotImmune>
		  </li>
		</comps>
		<stages>
		  <li>
			<label>initial</label>
			<becomeVisible>false</becomeVisible>
		  </li>
		  <li>
			<label>initial</label>
			<minSeverity>0.04</minSeverity>
			<statOffsets>
					<ArmorRating_Heat>-0.10</ArmorRating_Heat>
					<ArmorRating_Blunt>-0.10</ArmorRating_Blunt>
					<ArmorRating_Sharp>-0.10</ArmorRating_Sharp>
			</statOffsets>
		  </li>
		  <li>
			<label>minor</label>
			<minSeverity>0.2</minSeverity>
			<statOffsets>
					<ArmorRating_Heat>-0.20</ArmorRating_Heat>
					<ArmorRating_Blunt>-0.20</ArmorRating_Blunt>
					<ArmorRating_Sharp>-0.20</ArmorRating_Sharp>
			</statOffsets>
		  </li>
		  <li>
			<label>moderate</label>
			<minSeverity>0.40</minSeverity>
			<statOffsets>
					<ArmorRating_Heat>-0.30</ArmorRating_Heat>
					<ArmorRating_Blunt>-0.30</ArmorRating_Blunt>
					<ArmorRating_Sharp>-0.30</ArmorRating_Sharp>
			</statOffsets>
		  </li>
		  <li>
			<label>serious</label>
			<minSeverity>0.60</minSeverity>
			<statOffsets>
					<ArmorRating_Heat>-0.40</ArmorRating_Heat>
					<ArmorRating_Blunt>-0.40</ArmorRating_Blunt>
					<ArmorRating_Sharp>-0.40</ArmorRating_Sharp>
			</statOffsets>
		  </li>
		  <li>
			<label>extreme</label>
			<minSeverity>0.80</minSeverity>
			<statOffsets>
					<ArmorRating_Heat>-0.50</ArmorRating_Heat>
					<ArmorRating_Blunt>-0.50</ArmorRating_Blunt>
					<ArmorRating_Sharp>-0.50</ArmorRating_Sharp>
			</statOffsets>
		  </li>
		</stages>
	</HediffDef>
 
</Defs>