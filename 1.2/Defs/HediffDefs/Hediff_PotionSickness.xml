<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
	<HediffDef>
		<defName>MorrowRim_PotionSickness</defName>
		<label>alchemical toxicity</label>
		<description>An accumulation of various alchemical ingredients in the body. It will cause vomiting and slowly decrease capacities as buildup increases, eventually resulting in death. Buildup can be reduced by consuming cleansing elixirs, or by wating for the buildup to naturally decrease.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(1.0, 0.5, 0.7)</defaultLabelColor>
		<lethalSeverity>1</lethalSeverity>
		<makesSickThought>true</makesSickThought>
		<scenarioCanAdd>true</scenarioCanAdd>
		<comps>
		  <li Class="HediffCompProperties_Immunizable">
			<severityPerDayNotImmune>-0.08</severityPerDayNotImmune>
		  </li>
		</comps>
		<stages>
		  <li>
			<label>safe</label>
			<becomeVisible>false</becomeVisible>
		  </li>
		  <li>
			<label>initial</label>
			<minSeverity>0.03</minSeverity>
			<vomitMtbDays>10</vomitMtbDays>
			<capMods>
				  <li>
					<capacity>BloodFiltration</capacity>
					<offset>-0.025</offset>
				  </li>
				  <li>
					<capacity>BloodPumping</capacity>
					<offset>-0.025</offset>
				  </li>
				  <li>
					<capacity>Metabolism</capacity>
					<offset>-0.025</offset>
				  </li>
			</capMods>
		  </li>
		  <li>
			<label>minor</label>
			<minSeverity>0.2</minSeverity>
			<vomitMtbDays>5</vomitMtbDays>
			<capMods>
				  <li>
					<capacity>BloodFiltration</capacity>
					<offset>-0.05</offset>
				  </li>
				  <li>
					<capacity>BloodPumping</capacity>
					<offset>-0.05</offset>
				  </li>
				  <li>
					<capacity>Metabolism</capacity>
					<offset>-0.05</offset>
				  </li>
			</capMods>
		  </li>
		  <li>
			<label>moderate</label>
			<minSeverity>0.4</minSeverity>
			<vomitMtbDays>2.5</vomitMtbDays>
			<capMods>
				  <li>
					<capacity>BloodFiltration</capacity>
					<offset>-0.1</offset>
				  </li>
				  <li>
					<capacity>BloodPumping</capacity>
					<offset>-0.1</offset>
				  </li>
				  <li>
					<capacity>Metabolism</capacity>
					<offset>-0.1</offset>
				  </li>
			</capMods>
		  </li>
		  <li>
			<label>serious</label>
			<minSeverity>0.60</minSeverity>
			<vomitMtbDays>1.25</vomitMtbDays>
			<capMods>
				  <li>
					<capacity>BloodFiltration</capacity>
					<offset>-0.2</offset>
				  </li>
				  <li>
					<capacity>BloodPumping</capacity>
					<offset>-0.2</offset>
				  </li>
				  <li>
					<capacity>Metabolism</capacity>
					<offset>-0.2</offset>
				  </li>
			</capMods>
		  </li>
		  <li>
			<label>extreme</label>
			<minSeverity>0.80</minSeverity>
			<vomitMtbDays>0.625</vomitMtbDays>
			<capMods>
				  <li>
					<capacity>BloodFiltration</capacity>
					<offset>-0.4</offset>
				  </li>
				  <li>
					<capacity>BloodPumping</capacity>
					<offset>-0.4</offset>
				  </li>
				  <li>
					<capacity>Metabolism</capacity>
					<offset>-0.4</offset>
				  </li>
			</capMods>
		  </li>
		</stages>
	</HediffDef>
 
</Defs>