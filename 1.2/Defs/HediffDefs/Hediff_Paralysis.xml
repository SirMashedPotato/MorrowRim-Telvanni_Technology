<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
	<HediffDef>
		<defName>MorrowRim_StaveParalysis</defName>
		<label>paralysis</label>
		<description>Paralysing toxin accumulated within the body. Slowly decreases mobility, eventually immobilising the victim. Buildup wears off over time, and is not lethal.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(1.0, 1.0, 0.5)</defaultLabelColor>
		<maxSeverity>1</maxSeverity>
		<makesSickThought>true</makesSickThought>
		<scenarioCanAdd>true</scenarioCanAdd>
		<comps>
		  <li Class="HediffCompProperties_Immunizable">
			<severityPerDayNotImmune>-0.08</severityPerDayNotImmune>
		  </li>
		</comps>
		<stages>
		  <li>
			<label>initial</label>
			<becomeVisible>false</becomeVisible>
		  </li>
		  <li>
			<label>initial</label>
			<minSeverity>0.04</minSeverity>
			<capMods>
				<li>
					<capacity>Manipulation</capacity>
					<offset>-0.1</offset>
				</li>
				<li>
					<capacity>Moving</capacity>
					<offset>-0.1</offset>
				</li>
			</capMods>
		  </li>
		  <li>
			<label>minor</label>
			<minSeverity>0.2</minSeverity>
			<capMods>
				<li>
					<capacity>Manipulation</capacity>
					<offset>-0.2</offset>
				</li>
				<li>
					<capacity>Moving</capacity>
					<offset>-0.2</offset>
				</li>
			</capMods>
		  </li>
		  <li>
			<label>moderate</label>
			<minSeverity>0.40</minSeverity>
			<capMods>
				<li>
					<capacity>Manipulation</capacity>
					<offset>-0.4</offset>
				</li>
				<li>
					<capacity>Moving</capacity>
					<offset>-0.4</offset>
				</li>
			</capMods>
		  </li>
		  <li>
			<label>serious</label>
			<minSeverity>0.60</minSeverity>
			<capMods>
				<li>
					<capacity>Manipulation</capacity>
					<offset>-0.6</offset>
				</li>
				<li>
					<capacity>Moving</capacity>
					<offset>-0.6</offset>
				</li>
			</capMods>
		  </li>
		  <li>
			<label>extreme</label>
			<minSeverity>0.80</minSeverity>
			<capMods>
				<li>
					<capacity>Manipulation</capacity>
					<offset>-1</offset>
				</li>
				<li>
					<capacity>Moving</capacity>
					<offset>-1</offset>
				</li>
			</capMods>
		  </li>
		</stages>
	</HediffDef>
 
</Defs>