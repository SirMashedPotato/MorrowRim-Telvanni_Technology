<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>MorrowRim - The Sixth House</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/ThingDef[defName="Dagoth_BlightBeGone"]</xpath>
					<value>
						<thingCategories Inherit="False">
							<li>MorrowRim_Elixir</li>
						</thingCategories>
					</value>
				</li>

				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/ThingDef[defName="Dagoth_BlightBeGone"]/recipeMaker/recipeUsers</xpath>
					<value>
						<li>MorrowRim_ElixirTable</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
	
</Patch>

