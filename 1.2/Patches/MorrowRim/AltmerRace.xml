<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
    <mods>
      <li>MorrowRim - Altmer Race</li>
    </mods>

    <match Class="PatchOperationSequence">

		<operations>

			<li Class="PatchOperationAdd">
				<xpath>/Defs</xpath>
				<value>
					
					<RecipeDef ParentName = "MorrowRim_TransmutationBase">
						<defName>MorrowRim_TransmutationMeteoriteSteel</defName>
						<label>transmutate meteorite steel</label>
						<description>Transmutate 30 meteorite steel bars using 15 air salts, 15 ferrous salts and 30 steel.</description>
						<jobString>Transmutating meteorite steel.</jobString>
						<ingredients>
						  <li>
							<filter>
							  <thingDefs>
								<li>MorrowRim_AirSalts</li>
							  </thingDefs>
							</filter>
							<count>15</count>
						  </li>
						  <li>
							<filter>
							  <thingDefs>
								<li>MorrowRim_FerrousSalts</li>
							  </thingDefs>
							</filter>
							<count>15</count>
						  </li>
						  <li>
							<filter>
							  <thingDefs>
								<li>Steel</li>
							  </thingDefs>
							</filter>
							<count>30</count>
						  </li>
						</ingredients>
						<fixedIngredientFilter>
						  <thingDefs>
							<li>MorrowRim_AirSalts</li>
							<li>MorrowRim_FerrousSalts</li>
							<li>Steel</li>
						  </thingDefs>
						</fixedIngredientFilter>
						<products>
						  <MorrowRim_MeteoriteSteel>30</MorrowRim_MeteoriteSteel>
						</products>
					</RecipeDef>
					
					<RecipeDef ParentName = "MorrowRim_TransmutationBase">
						<defName>MorrowRim_TransmutationMoonstone</defName>
						<label>transmutate moonstone</label>
						<description>Transmutate 30 moonstone bars using 15 air salts, 15 void salts and 30 steel.</description>
						<jobString>Transmutating moonstone.</jobString>
						<ingredients>
						  <li>
							<filter>
							  <thingDefs>
								<li>MorrowRim_AirSalts</li>
							  </thingDefs>
							</filter>
							<count>15</count>
						  </li>
						  <li>
							<filter>
							  <thingDefs>
								<li>MorrowRim_VoidSalts</li>
							  </thingDefs>
							</filter>
							<count>15</count>
						  </li>
						  <li>
							<filter>
							  <thingDefs>
								<li>Steel</li>
							  </thingDefs>
							</filter>
							<count>30</count>
						  </li>
						</ingredients>
						<fixedIngredientFilter>
						  <thingDefs>
							<li>MorrowRim_AirSalts</li>
							<li>MorrowRim_VoidSalts</li>
							<li>Steel</li>
						  </thingDefs>
						</fixedIngredientFilter>
						<products>
						  <MorrowRim_Moonstone>30</MorrowRim_Moonstone>
						</products>
					</RecipeDef>
					
				</value>
			</li>
			
		</operations>
    </match>
  </Operation>

</Patch>